package chooseokProject;

import java.util.*;

public class Start {
	static Character user;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		user = new Character("Josh", 400, 40);
		//explain about each room(NEWS)
		/*
		 * EAST hunting room
		 * WEST store
		 * NORTH boss
		 * SOUTH healing room UMUL
		 */
		
		System.out.println();
		String ans = sc.next();
		//hunting room
		if(ans.equals("east")) {
			Monster monster;
			if(user.level<=3) {
				monster = new Monster("raptor", 30, 600, 300);
			}
			else {
				monster = new Monster("dragon", 60, 2000,500);
			}
			fight(monster);
		}
		
		
		
	}
	
	public static void fight(Monster monster) {
		Scanner sc = new Scanner(System.in);
		while(true) {
			//run or attack
			System.out.println("");
			String ans = sc.next();
			if(ans.equals("run")) {
				break;
			}else {
				attck(monster);
			}
			
		}
	}
	
}
