package chooseokProject;

import java.util.*;

public class Start {
	static Character user;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		user = new Character("Josh", 400, 40);
		//TODO: explain about each room(NEWS)
		/*
		 * EAST hunting room
		 * WEST store
		 * NORTH boss
		 * SOUTH healing room UMUL
		 */
		
		System.out.println();
		String ans = sc.next();
		//hunting room
		while(true) {
			if(ans.equals("east")) {
				Monster monster;
				if(user.level<=3) {
					monster = new Monster("raptor", 30, 600, 300);
				}
				else if(user.level<=7) {
					monster = new Monster("golem", 40, 1500,400);
				}
				else {
					monster = new Monster("dragon", 60, 2000,500);
				}
				fight(monster);
			}
			else if(ans.equals("south")) {
				
			}
			
			
			
		}
		
		
	}
	
	public static void fight(Monster monster) {
		Scanner sc = new Scanner(System.in);
		while(true) {
			//TODO: run or attack
			System.out.println("");
			String ans = sc.next();
			if(ans.equals("run")) {
				break;
			}else {
				user.attack(monster);
				if(monster.hp>0) {
					monster.attack(user);
				}else {
					user.level++;
					user.hp+=50;
					user.ad+=5;
					user.gold+=monster.dropMoney;
					break;
				}
				user.showStatus();
				monster.showStatus();
				if(user.hp<0) {
					System.out.println("GG");
					System.out.println("Game Restart");
					main(null);
				}
			}
			
		}
	}
	
	
	
	
	
	
}
